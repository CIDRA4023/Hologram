<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hologram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->

        <item name="actionBarTheme">@style/CustomToolbar</item>
        <item name="actionOverflowButtonStyle">@style/AppOverflowButton</item>
    </style>

    <style name="CustomToolbar" parent="Theme.AppCompat">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <!--  タブレイアウトの設定  -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/black</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/secondaryLightColor</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="tabSelectedTextColor">@color/primaryColor</item>

    </style>
</resources>