<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hologram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/primaryLightColor</item>

        <item name="actionBarTheme">@style/CustomToolbar</item>
        <item name="actionOverflowButtonStyle">@style/AppOverflowButton</item>

    </style>


    <!--  Toolbarの設定  -->
    <style name="CustomToolbar" parent="Theme.AppCompat">
        <item name="android:background">@color/primaryColor</item>
        <item name="titleTextColor">@color/white</item>

    </style>
    <!--  オプションメニューのアイコン設定  -->
    <style name="AppOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>


    <!--  タブレイアウトの設定  -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/secondaryLightColor</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@color/primaryColor</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChipColor" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Theme.Hologram.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.Hologram.AppWidgetContainer" parent="Theme.Hologram.AppWidgetContainerParent" />

</resources>